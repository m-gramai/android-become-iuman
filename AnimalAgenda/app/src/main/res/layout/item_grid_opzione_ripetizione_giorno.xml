<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxWidth="@dimen/max_dimensione_opzione_ripetizione_giornaliera"
    android:padding="@dimen/margine_pagina_stretto"
    android:descendantFocusability="blocksDescendants">

    <!--Toggle button per la singola opzione di ripetizione giornaliera-->
    <ToggleButton
        android:id="@id/tbOpzioneGiornoSettimana"
        android:layout_width="@dimen/ottimale"
        android:layout_height="@dimen/ottimale"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:theme="@style/TemaOpzioneRipetizione" />

</androidx.constraintlayout.widget.ConstraintLayout>