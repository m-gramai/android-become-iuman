<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margine_pagina"
    tools:context=".CalendarioActivity">

    <!--Calendario-->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/mcvCalendario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_tileHeight="@dimen/altezza_calendario"
        app:mcv_showOtherDates="other_months"
        app:mcv_weekDayTextAppearance="@style/StileEtichetteGiorniSettimana"
        app:mcv_dateTextAppearance="@style/StileGiorniCalendario" />

</LinearLayout>