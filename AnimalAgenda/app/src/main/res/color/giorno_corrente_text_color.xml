<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Definizione del colore per quando viene selezionato il giorno corrente-->
    <item
        android:state_checked="true"
        android:color="@color/white"/>

    <!--Definizione del colore mentre si tiene premuto il giorno corrente-->
    <item
        android:state_pressed="true"
        android:color="@color/white"/>

    <!--Definizione del colore per quando il giorno Ã¨ disabilitato-->
    <item
        android:state_enabled="false"
        android:color="@color/mcv_giorno_disabilitato"/>

    <!--Definizione del colore predefinito per il giorno corrente-->
    <item android:color="@color/teal_200"/>
</selector>