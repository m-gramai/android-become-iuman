<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Definizione dello stile per le etichette dei giorni della settimana del calendario-->
    <style name="StileEtichetteGiorniSettimana" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="textAllCaps">true</item>
    </style>

    <!--Definizione dello stile per i giorni del calendario-->
    <style name="StileGiorniCalendario" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">@dimen/font_body1</item>
    </style>

    <!--Definizione dello stile per il giorno corrente-->
    <style name="StileGiornoCorrente" parent="StileGiorniCalendario">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/giorno_corrente_text_color</item>
    </style>

    <!--Definizione del tema per il bottom sheet dei dettagli del luogo-->
    <style name="TemaDettagliLuogo" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StileDettagliLuogo</item>
    </style>

    <!--Definizione dello stile per il bottom sheet dei dettagli del luogo-->
    <style name="StileDettagliLuogo" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dettagli_luogo</item>
    </style>

    <!--Definizione del tema per i toggle button delle opzioni di ripetizione-->
    <style name="TemaOpzioneRipetizione" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyleToggle">@style/StileOpzioneRipetizione</item>
    </style>

    <!--Definizione dello stile per i toggle button delle opzioni di ripetizione-->
    <style name="StileOpzioneRipetizione" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/selector_opzione_ripetizione</item>
    </style>
</resources>